{
  "plugins": ["unused-imports"],
  "rules": {
    "no-unused-vars": "off", // 基本ルールをオフにする
    "unused-imports/no-unused-imports": "error", // 未使用の import をエラーにする
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
